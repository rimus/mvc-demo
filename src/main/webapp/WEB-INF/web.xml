<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>mvcTask</display-name>
    <servlet>
        <display-name>StartController</display-name>
        <servlet-name>StartController</servlet-name>
        <servlet-class>com.epam.gomel.controllers.StartController</servlet-class>
        <init-param>
            <param-name>filename</param-name>
            <param-value>in1</param-value>
        </init-param>
    </servlet>
    <servlet>
        <display-name>ResultController</display-name>
        <servlet-name>ResultController</servlet-name>
        <servlet-class>com.epam.gomel.controllers.ResultController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StartController</servlet-name>
        <url-pattern>/start</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResultController</servlet-name>
        <url-pattern>/result</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>start</welcome-file>
    </welcome-file-list>
</web-app>